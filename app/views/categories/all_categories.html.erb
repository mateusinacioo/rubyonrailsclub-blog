<section class="section categories-grid-section">
    <div class="container">
      <div class="title-container with-item">
        <h2 class="title">Todas categoria</h2>
      </div>
      <div class="grid">
        <% @categories.each do |category|%>
          <%= link_to category_articles_path(id: category.id), class: "item" do %>
            <%= image_tag category.cover_image, alt: "Categoria", class: "item-image" %>
            <div class="item-title"><%= category.name %></div>
            <p class="item-description"><%= category.description %></p>
          </a>
          <% end %>
        <% end %>
      </div>
    </div>
</section>