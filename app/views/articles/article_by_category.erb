<section class="section posts-grid-section">
  <div class="container">
    <div class="title-container">
      <h2 class="title">Artigos na Categoria:  <%= @category.name %></h2>
    </div>
    
    <% if @articles.present? %>
    <div class="grid" id="postGridAll">
      <% @articles.each do |article| %>
        <%= render partial: "welcome/article", locals: { article: article } %>
      <% end %>
    </div>
    <% else %>
    <div class="grid" id="postGridAll">
      <p>NÃ£o existem artigos para esta categoria.</p>
    </div>
    <% end %>
  
  </div>
  <div class="grid-mobile">
    <div class="bullets" id="postGridAllBullets"></div>
    <div><a href="#" class="button clean">ver mais</a></div>
  </div>
</section>
